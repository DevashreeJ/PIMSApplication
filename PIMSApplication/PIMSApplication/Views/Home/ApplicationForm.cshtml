@model PIMSApplication.Models.StudentInformationTable

@{
    ViewBag.Title = "ApplicationForm";
}

<h2>Application Form</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.District_Code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.District_Code, new { htmlAttributes = new { @class = "form-control", placeholder= "Example:  123456789" } })
                @Html.ValidationMessageFor(model => model.District_Code, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.School_Year_Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.School_Year_Date, new { htmlAttributes = new { @class = "form-control", placeholder= "YYYY-MM-DD" } })
                @Html.ValidationMessageFor(model => model.School_Year_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Student_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Student_Id, new { htmlAttributes = new { @class = "form-control", placeholder= "Example: 1000000009" } })
                @Html.ValidationMessageFor(model => model.Student_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reporting_Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reporting_Date, new { htmlAttributes = new { @class = "form-control", placeholder = "YYYY-MM-DD" } })
                @Html.ValidationMessageFor(model => model.Reporting_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Category_Set_code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Category_Set_code, new { htmlAttributes = new { @class = "form-control", placeholder = "ACT16" } })
                @Html.ValidationMessageFor(model => model.Category_Set_code, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
			 @Html.LabelFor(model => model.Measure_type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Measure_type, new { htmlAttributes = new { @class = "form-control", placeholder = "COUNT" } })
                @Html.ValidationMessageFor(model => model.Measure_type, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
			@Html.LabelFor(model => model.Act16_fund_Category, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.Act16_fund_Category,
				  new List<SelectListItem> {
					   new SelectListItem { Value = "1" , Text = "1" },
					   new SelectListItem { Value = "2" , Text = "2" },
					   new SelectListItem { Value = "3" , Text = "3" },
					   new SelectListItem { Value = "4" , Text = "4" },

					},
				  new { @class = "myselect" })
			</div>
		</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<label class="label-info">@ViewBag.message</label> 
			</div>
		</div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
